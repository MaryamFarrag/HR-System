<!DOCTYPE html>
<html>
    <% include head%>
    <body>
        <% include sidebar%>
        <%include navbar %>
        <section class="content" id="interview">
            <% for(i=0; i < data.length; i++){%>
            <h1 class="">Interview <%= data[i].name %></h1>
            <div class="intterview">
                <span class="pr-2 border-right">Interview Date: <strong class="int-date"><%= data[i].interviewDate%></strong></span>
                <span class="pr-2 border-right">Interview time: <strong class="int-time"><%= data[i].interviewTime%></strong></span>
                <span><button onclick="arrivalTime()" class="btn btn-outline-success" id="time">Arrived</button></span><br>
                <strong class="pr-2 border-right"><%= data[i].firstChoice%></strong>
                <strong class="pl-2"><%= data[i].secondChoice%></strong><br><br>
                <span class="pr-2 border-right">University: <strong><%=data[i].university %></strong></span>
                <span class="pr-2">Faculty: <strong><%=data[i].faculty %></strong></span>

            </div>
            <hr class="w-50">
            <div class="container">
                <form>
                    <div class="form-group">
                        <label>interviewee Arrival time:</label>
                        <input class="form-control" name="arrivalTime">
                    </div>
                    <div class="form-group">
                        <label>interview notes:</label>
                        <textarea class="form-control late-or-early" name="interviewNotes"></textarea>
                    </div>
                    <button class="btn btn-primary float-right">Submit</button>
                </form>
            </div>
            <%}%>
        </section>
        
        


        <script src="/javascripts/jquery.min.js"></script>
        <script src="/javascripts/jquery-ui.min.js"></script>
        <script src="/javascripts/jquery.slimscroll.min.js"></script>
        <script src="/javascripts/popper.min.js"></script>
        <script src="/javascripts/bootstrap.min.js"></script>
        <script src="/javascripts/fastclick.js"></script>
        <script src="/javascripts/adminlte.js"></script>
        <script src="/javascripts/demo.js"></script>
        <script src="/javascripts/moment.js"></script>
        <script src="/javascripts/fullcalendar.min.js"></script>
        <script src="/javascripts/index.js"></script>
    </body>
</html>